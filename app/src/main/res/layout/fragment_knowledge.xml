<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui_down.fragment_knowledge">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/button_sell"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="发布二手商品"/>

    <Button
        android:id="@+id/textview_have"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="收二手数码"
        android:layout_alignParentRight="true"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="20dp"
        android:layout_marginTop="70dp">
        
        <RelativeLayout
            android:id="@+id/relativelayout_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:id="@+id/imageview_computer"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/computer"/>

            <TextView
                android:id="@+id/textview_computer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="出二手电脑，自用，可小刀"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/money"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/money_1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="120dp"
                android:layout_marginBottom="40dp"/>

            <TextView
                android:id="@+id/textview_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="35dp"
                android:layout_marginEnd="30dp"
                android:textSize="30dp"
                android:textColor="#FFA500"/>
            
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="20dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/card_view_1">

        <RelativeLayout
            android:id="@+id/relativelayout_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_iphone"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/iphone"/>

            <TextView
                android:id="@+id/textview_iphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="iphone手机，自用现出手"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/money_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/money_1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="120dp"
                android:layout_marginBottom="40dp"/>

            <TextView
                android:id="@+id/textview_money_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3400"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="35dp"
                android:layout_marginEnd="30dp"
                android:textSize="30dp"
                android:textColor="#FFA500"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textview_more_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_2"
        android:text="无更多二手商品..."
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>